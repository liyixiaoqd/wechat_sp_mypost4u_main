.line_view{
  left: 19%;
  width: 0rpx;
  border-left: 1px dotted #979797;
  position: absolute;
  z-index: -1;
}

.first_tracking_info{
  color: #2D8CCF;
}

.item_view{
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding: 20rpx 0rpx;
}


.item_view_first{
  border-top: 0px;
}
.item_view_last{
  border-bottom: 0px;
}