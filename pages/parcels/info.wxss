/* pages/parcels/info.wxss */


.parcel_base_info{
  width: 100%;
  font-size: 15px;
  border-top: 2rpx solid #eee;
  border-bottom: 20rpx solid #eee;
  padding: 50rpx 0rpx 18rpx 20rpx;
}

.parcel_base_info view{
  margin-bottom: 12rpx;
}

.parcel_base_info_title{
  display: flex;
  align-items: center;
  font-size: 20px;
  padding-bottom: 36rpx;
  color: #4A4A4A ;
  font-weight: bold;
}

.info_image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.parcel_base_info_text{
  color: #777777 ;
  margin-right: 20rpx;
}
.parcel_base_info_content{
  color: #1C1A2A ;
}

.parcel_detail_info{
  width: 100%;
  font-size: 15px;
  border-bottom: 20rpx solid #eee;
  padding: 30rpx 50rpx 30rpx 50rpx;
}
.parcel_detail_type{
  text-align: center;
  margin-bottom: 50rpx;
}
text.selected{
  background-color: #2D8CCF ;
  color: #FFFFFF ;
}
.parcel_detail_type_title{
  width: 32%;
  display: inline-block;
  border-top: 1px solid #979797;
  border-bottom: 1px solid #979797;
  border-left: 1px solid #979797;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  color: #979797 ;
}

.border_right{
  border-right: 1px solid #979797;
  border-top-right-radius: 4px;
  border-bottom-right-radius:4px;
}

.border_left{
  border-top-left-radius: 4px;
  border-bottom-left-radius:4px;
}


.person_info view{
  margin-bottom: 12rpx;
}

.person_info{
  margin: 0rpx 12rpx;
  font-size: 15px;
}
.sender_info{
  float: right;
}
.d_arrow_image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.sender_detail_info{
  border-top: 1px solid #eee;
  margin-top: 30rpx;
  padding-top: 30rpx;
}

.parcel_tracking_info{
  width: 100%;
  padding-top: 30rpx;
  font-size: 15px;
}
.tracking_rcpt_address{
  height: 74rpx;
  margin-bottom: 30rpx;
}

.tracking_image_view{
  display: inline-block;
  width: 21%;
  text-align: right;
}

.tracking_get_image{
  width: 56rpx;
  height: 56rpx;
  z-index: 1;
}

.tracking_dot_view{
  position: relative;
}

.tracking_dot_image{
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  z-index: 1;
  left: 16.4%;
  top: 16rpx;
}

.tracking_car_image{
  position: absolute;
  width: 56rpx;
  height: 56rpx;
  z-index: 1;
  left: 13.5%;
}

.tracking_info{
  margin-bottom: 30rpx;
}

.tracking_info .date{
  font-size: 14px;
  color: #777777 ;
  height: 40rpx;
}
.tracking_info .time{
  font-size: 12px;
  color: #777777 ;
  height: 34rpx;
}

.tracking_info_content{
  display: block;
}

.tracking_info_float{
  float: right;
  /* height: 74rpx; */
  width: 76%;
  font-size: 15px;
  color: #777777 ;
}

